<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

<!-- login page -->

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/login/homePage.xhtml</to-view-id>
            <!--            <redirect></redirect>-->
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/newUser.xhtml</to-view-id>
            <!--            <redirect></redirect>-->
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>loginerr</from-outcome>
            <to-view-id>/error/loginError.xhtml</to-view-id>
            <!--            <redirect></redirect>-->
        </navigation-case>
    </navigation-rule>

<!-- error page -->

    <navigation-rule>
        <from-view-id>/error/loginError.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <!--            <redirect></redirect>-->
        </navigation-case>
    </navigation-rule>

<!-- registration page -->

    <navigation-rule>
        <from-view-id>/newUser.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <!--            <redirect></redirect>-->
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/newUser.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/login/homePage.xhtml</to-view-id>
            <!--            <redirect></redirect>-->
        </navigation-case>
    </navigation-rule>

<!-- home page -->

    <navigation-rule>
        <from-view-id>/login/homePage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/logout.xhtml</to-view-id>
            <!--            <redirect></redirect>-->
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/login/homePage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>account</from-outcome>
            <to-view-id>/login/newAccount.xhtml</to-view-id>
            <!--            <redirect></redirect>-->
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/login/homePage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>payment</from-outcome>
            <to-view-id>/login/newPayment.xhtml</to-view-id>
            <!--            <redirect></redirect>-->
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/login/homePage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>request</from-outcome>
            <to-view-id>/login/newRequest.xhtml</to-view-id>
            <!--            <redirect></redirect>-->
        </navigation-case>
    </navigation-rule>

<!-- account page -->

    <navigation-rule>
        <from-view-id>/login/newAccount.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/login/homePage.xhtml</to-view-id>
            <!--            <redirect></redirect>-->
        </navigation-case>
    </navigation-rule>

<!-- request page -->

    <navigation-rule>
        <from-view-id>/login/newRequest.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/login/homePage.xhtml</to-view-id>
            <!--            <redirect></redirect>-->
        </navigation-case>
    </navigation-rule>

</faces-config>
