<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

<!-- login page -->

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/user/homePage.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>/newUser.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admin/adminHome.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>loginerr</from-outcome>
            <to-view-id>/loginError.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>

<!-- error page -->

    <navigation-rule>
        <from-view-id>/loginError.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>

<!-- registration page -->

    <navigation-rule>
        <from-view-id>/newUser.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admin/adminMain.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>admin</from-outcome>
            <to-view-id>/admin/adminMain.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>

    </navigation-rule>

<!-- home page -->

    <navigation-rule>
        <from-view-id>/user/homePage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/logout.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>account</from-outcome>
            <to-view-id>/user/newAccount.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>payment</from-outcome>
            <to-view-id>/user/newPayment.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>request</from-outcome>
            <to-view-id>/user/newRequest.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>manrequest</from-outcome>
            <to-view-id>/user/manRequest.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>

<!-- account page -->

    <navigation-rule>
        <from-view-id>/user/newAccount.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/user/homePage.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>

<!-- request page -->

    <navigation-rule>
        <from-view-id>/user/newRequest.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/user/homePage.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>

<!-- payment page -->

    <navigation-rule>
        <from-view-id>/user/newPayment.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/user/homePage.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>

<!-- new request page -->

    <navigation-rule>
        <from-view-id>/user/manRequest.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/user/homePage.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>

<!-- admin home page -->

    <navigation-rule>
        <from-view-id>/admin/adminHome.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>adminreg</from-outcome>
            <to-view-id>/admin/adminRegister.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/logout.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>

<!-- admin registration page -->

    <navigation-rule>
        <from-view-id>/admin/adminRegister.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>adminhome</from-outcome>
            <to-view-id>/admin/adminHome.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/admin/adminHome.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/logout.xhtml</to-view-id>
            <redirect></redirect>
        </navigation-case>
    </navigation-rule>

</faces-config>
